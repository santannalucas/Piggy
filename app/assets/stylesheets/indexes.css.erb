
/* Main Index Table */
.default {
    width: 100%;
    margin: 0;
    table-layout: fixed;
    font-family: "Helvetica Neue", Arial, sans-serif;
    font-size: 14px;
    font-weight: 400;
    line-height: 24px;
    border-collapse: collapse;
    border-spacing: 0;}

.default th {
    font-size: 0.95em;
    padding:2px 10px;
    background-color: #eaeaea;
    font-weight:bold;
    border-width:0;
    overflow:hidden;
    white-space: nowrap;
    }

.default td {
    text-align: center;
    line-height: 28px;
    font-size: 14px;
    padding:5px;
    border-width:0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;}

.default td.expenses, .default td.deposit{
    font-size: 22px;
    font-weight: bold;
}

.default td.expenses.trans_amount, .default td.deposit.trans_amount{
    font-size: 15px;
    font-weight: bold;
}

.default td.expenses, .trans_amount.expenses, .row-form-field.expenses{
   /* color: #c53e3e; */
}
.default td.expenses, .row-form-field.expenses, .row-form-form.expenses{
    color: #c53e3e;
}
.default td.deposit, .trans_amount.deposit{
    color: #66965d;
}

.default td.bottom, .default.assignments td.bottom{
    line-height: 19px;
    height: 13px;
    font-size: 13px;
    padding: 2px 10px;
    background-color: #eaeaea;
    font-weight: bold;
    white-space: nowrap;
    border-top: 3px solid #dedede;
    text-align: center !important;
}

.default td.top{
    line-height: 19px;
    height: 13px;
    font-size: 13px;
    padding: 2px 10px;
    background-color: #eaeaea;
    border-bottom: 3px solid #dedede;
}

.default tr:hover{background-color: whitesmoke;}



.default tr.updated{
    background-color: #ddffc8 !important;
}

.default th .current {
    padding:0 20px 0 0 !important;
    background-repeat: no-repeat;
    background-position: right;
}

.default th .asc {
    background-image: url(<%= asset_path("arrow_down.png") %>);
}

.default th .desc {
    background-image: url(<%= asset_path("arrow_up.png") %>);
}

/* Checkbox inside default table */
.default input[type="checkbox"] {
    height: 16px;
    width: 16px;
    font-size: 18px !important;
}

.default td.show-stats, .default th.show-stats{
  display: none;
}


.default th.check-select{
  padding:0 5px;
}

.log-details{
    line-height: 22px !important;
    word-wrap: normal !important;
    text-align: left;
    white-space: normal !important;
    word-break: break-word !important;
}


/* Even and Odd - Index Table Cycle */
.odd{background-color:#FFF;}
.even{background-color:#FBFBFB;}


.auto_wrap {
    height: 80px !important;
    word-wrap: normal !important;
    text-align: left;
    white-space: normal !important;
    word-break: break-word !important;
    overflow-y: auto !important;
    vertical-align:middle !important;
    font-style: italic;
}

.apply_button{
    width:20px;
    overflow: visible;
}
.action-icon{
    vertical-align: middle;
    cursor: pointer;
    text-align: center;
    font-size: 20px;
    background:none;
    border:none;
    padding: 1px 0 0 0;
    outline-color:  #53667a;
    outline-offset: 2px;
    --fa-secondary-opacity: 1.0;
}
.fa-trash.action-icon{
    color: #7e7e7e;
}

.action-icon.sidebar {
    font-size: 25px;
    margin: 15px 4px 0;
    --fa-primary-opacity: 0.8;
    --fa-primary-color: #2c3e4f;
    --fa-secondary-opacity: 0.8;
    --fa-secondary-color: #c1c1c1;
}

.action-icon.sidebar:hover, .action-icon.sidebar:focus{
    --fa-primary-opacity: 1;
    --fa-secondary-opacity: 1;
    outline: none;
}

.action-icon.restore{
  --fa-secondary-opacity: 0.5;
}

.action-icon.lock{
  --fa-secondary-color: #8e8e8e;
  --fa-secondary-opacity: 1;
  --fa-primary-color: #c18d2d;
  cursor: default;
}
.status{
    margin: auto;
    width: 80px;
    height: 16px;
    line-height: 16px;
    font-weight: bold;
    font-size: 11px;
    padding: 3px;
    border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    color: white;
    text-align: center;
}

    .resize-header{
    top : 0;
    right : 0;
    bottom : 0;
    width : 5px;
    background-color : #dedede;
    position : absolute;
    cursor : col-resize;
    }

select#custom_role_rule_custom_rule_id, .add-new-row {
    padding: 0 1%;
    height:30px;
    background-color: white;
    width: 97%;
    color: #484848;
    margin: 0;
    float:left;
    border: none;
    line-height: 28px;
    font-size: 14px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    outline-color:  #53667a;
    outline-offset: 1px;
}

.ui-sortable-helper {
  display: table;
}

.default.rules-form input[type="checkbox"] {
    cursor: pointer;
    font-size: 27px !important;
    padding: 0;
    margin: 0;
    vertical-align: top;
    width: 40px !important;
    line-height: 34px;
    height: 28px !important;}
.default.rules-form input[type="checkbox"]:after{content: "\f205";display: inline-block;transform: rotate(180deg) !important;}
.default.rules-form input[type="checkbox"]:checked:after {content: "\f205"; color: #2d7219; /* background-color: aqua; */ transform: rotate(0deg) !important;}
.default.rules-form input[type="checkbox"]:disabled, .default.rules-form input[type="checkbox" i]:disabled, .default.rules-form input:disabled{ cursor:not-allowed;color: #e4e4e4;}
.default.rules-form input[type="checkbox"]:disabled:checked:after { cursor:not-allowed;color: #57bb3d; !important;
}
.fa-trash-undo-alt.action-icon.row-form{
    color: #2b3e50;
    opacity: 0.9;
}

.input-field-table-column{
    font-family: "Helvetica Neue", Arial, sans-serif;
    margin: 0 .5%;
    padding: 0 10px 0 5px;
    height: 38px;
    background-color: white;
    width: 97%;
    color: black;
    border: none;
    line-height: 28px;
    font-size: 14px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    outline-color: #d1d2d3;
    outline-offset: -1px;
}

.input-field-table-column.half{
    width: 40%;
}

.seven-width {
    width: 70%;
}

.action-icon.cancel-table-row-form, .action-icon.cancel-table-row, .field-form.cancel,  .fa-times-circle.action-icon{
  --fa-secondary-color: #a5a5a5;
  --fa-primary-color: white;
  font-size: 23px;
}

.input-field-table-column::placeholder{
    font-size: 12px;
    color: #9c9c9c;
}
.transaction-type{
    margin: -5px 5px 0;
    font-weight: bold;
    position: absolute;
}

.row-form-form.error{
    background-color: #ffe0e0;
}

 input#transaction_amount{

 }

input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
{
    margin: 0 -5px 0 8px;
}

input[type=number]
{
    -moz-appearance: textfield;
}
#row-form-new.deposit, .row-form-form.deposit, .default tr.row-form-form.deposit:hover{
    background-color: #d9f7d1;
}

#row-form-new.expense, .row-form-form.expenses, .default tr.row-form-form.expenses:hover{
    background-color: #f1f1df;
}

.default tr.row-form-form:hover{background-color: inherit;}

.action-icon.row-form{
    vertical-align: middle;
}

.fa-check-circle.deposit{
    --fa-secondary-color: #ededed;
    --fa-primary-color: #6a8b71;
}


.fa-check-circle.expenses{
    --fa-secondary-color: #ededed;
    --fa-primary-color: #c74e4e;
}

.fad.fa-save {
    margin-top: -1px;
    --fa-secondary-color: #ededed;
    --fa-primary-color: #6a8b71;
}

.fad.fa-pencil-alt{
    --fa-secondary-color: #6a8b71;
    --fa-primary-color: #787878;
}
.cancel-new-account{
  margin-left: -30px;
  --fa-primary-color: #ffffff;
  --fa-secondary-color: #94a5a6;
}

.default td.trans-description{
    text-align: left;
    color: #838383;
    font-size: 12px;
}

.default td.form{
    padding: 5px 5px 5px 0;
}























