/* Checkbox and Radio*/
input[type=checkbox], input[type="radio" i], input[type="radio"] {
    font-family: "Font Awesome 5 Pro";
    font-weight: 900;
    margin: 0 5px;
    font-size: 14px;
    -webkit-appearance: none;
    display: inline-block;
    height: 13px; width: 13px;
    padding: 0;
    text-align: center;
    color: #b4b4b4;
    overflow: visible;
    vertical-align: text-bottom;
    left: -1px;
    top: -1px;
    position: relative;
    box-sizing: initial;
    border-radius: 10px;
}

/* Checkbox Focus Unselected */
input[type=checkbox]:hover, input[type=checkbox]:focus, input[type=checkbox]:focus:after, input[type=checkbox]:checked:focus:after{
    color: #2c3e50;
    outline: none;
}

/* Checkbox Focus Unselected */
input[type="radio" i]:hover, input[type="radio"]:focus, input[type="radio" i]:focus:after, input[type="radio"]:checked:focus:after{
    color: #2c3e50;
    outline: none;
}

/* Checkbox Unselected */
input[type=checkbox]:after{

    content: "\f0c8";
}


/* Checkbox Selected */
input[type=checkbox]:checked:after{

    content: "\f14a";
    color: #595959;
}

input[type="checkbox"]:disabled, input[type="checkbox" i]:disabled , input:disabled {
    /* background-color: rgba(59, 59, 59, 0.3);
    border-color: rgba(118, 118, 118, 0.3);
    color: lightgrey;
     */
}
input[type="radio" i]:after, input[type="radio"]:after {
    content: "\f111";
    font-weight: 400;
}

input[type="radio" i]:checked:after, input[type="radio"]:checked:after{
    content: "\f111";
    font-weight: 900;
    color: #2c3e50;
}

input[type="file"i].field-row-import-file{
