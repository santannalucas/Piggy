/* Search Buttons */

#search-button-box{
    margin: 30px 0 0;
    padding:0;
    z-index: 1;
}

/* Button */
.search-button{
    width:130px;
    height: 40px;
    font-size: 1em;
    line-height: 1em;
    text-align: center;
    color: #FFF;
    text-decoration: none;
    border: none;
    -webkit-appearance: push-button;
    user-select: none;
    white-space: pre;
    cursor: default;
    background-color: buttonface;
    box-sizing: border-box;
    padding: 1px 7px 2px;
}

.search-button:hover{
    border: 0;
    cursor: pointer;
    -moz-transition: all 0.7s;
    -ms-transition: all 0.7s;
    -o-transition: all 0.7s;
    transition: all 0.7s;
}

/* Apply Button */
.search-button.apply{
    height: 45px;
    background-color: #6a8b71;
    color: #ffffff;
    transition: box-shadow 0.3s, border 0.3s;
    border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
}

.search-button.apply:hover {
    color:#FFF;
    background-color: #414141;
}


/* Clear Button */
.search-button.clear{
    margin: 10px 0 0;
    padding: 12px 0 0 0;
    background-color: #EAE8E8;
    color: #3a3b3f;
    transition: box-shadow 0.3s, border 0.3s;
    border-radius: 4px;
    -moz-border-radius: 4px;
    -webkit-border-radius: 4px;
    display:block;
}
.search-button.clear:hover {
    background-color: #414141;
    color: white;
}

#hide-search-arrow{
    margin: 0 5px;
}